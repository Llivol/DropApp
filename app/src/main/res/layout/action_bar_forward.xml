<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:paddingHorizontal="@dimen/main_padding_horizontal"
    android:paddingVertical="@dimen/main_padding_vertical"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_toLeftOf="@id/btn_forward"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_centerVertical="true"
        android:text = "Custom Action Bar"
        android:textSize = "@dimen/text_xl"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/btn_forward"
        android:layout_marginLeft="@dimen/action_bar_margin_horizontal"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/fab_size"
        android:layout_height="match_parent"
        android:background="@drawable/btn_rounded_secondary"
        android:shadowRadius="100"
        android:src="@drawable/ic_right_icon_white"/>
</RelativeLayout>